<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inferno.projectx">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".dashboard.DashboardActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".contractors.ContractorList"
            android:label="@string/title_activity_contractor_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".contractors.AddContractor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".workers.WorkerList"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".dailytask.DailytaskList"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".workers.AddWorker" />
        <activity
            android:name=".materials.MaterialList"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".materials.AddMaterial"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".assigntask.AssignTask"></activity>
    </application>

</manifest>